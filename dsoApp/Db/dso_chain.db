# P Prefix
# R Record root

# Patch scanning of channel records:
# Scan only the trigger for CH1,
# turn others into Passive
record(ai, "$(P)$(R):ch1_mult")
{
    field(SCAN, "1 second")
}
record(ai, "$(P)$(R):ch2_mult")
{
    field(SCAN, "Passive")
}
record(ai, "$(P)$(R):ch3_mult")
{
    field(SCAN, "Passive")
}
record(ai, "$(P)$(R):ch4_mult")
{
    field(SCAN, "Passive")
}


# Instead, process CH2 at end of CH1 and so on


# Raw waveform contains 10000 data points + CR + LF
record(waveform, "$(P)$(R):ch1")
{
    field(FLNK, "$(P)$(R):ch2_mult")
}
record(waveform, "$(P)$(R):ch2")
{
    field(FLNK, "$(P)$(R):ch3_mult")
}
record(waveform, "$(P)$(R):ch3")
{
    field(FLNK, "$(P)$(R):ch4_mult")
}



